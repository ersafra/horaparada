            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#E60A0A"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-2741955499317480/3735714115"
            ads:layout_constraintBottom_toBottomOf="parent"></com.google.android.gms.ads.AdView>

        <TextView
        android:id="@+id/txtVhora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="txtVhora"
        android:textColor="#844046"
        android:textSize="18dp"
        android:visibility="invisible"
        tools:layout_editor_absoluteX="103dp"
